reverse_proxy {
	dynamic a {
		name {$BACKEND_DOMAIN}
		port {$BACKEND_PORT}
		refresh 1s
		dial_timeout 30s
		versions ipv4 ipv6
	}

	import lb_settings
	import passive_health_checks

	# Force correct Host header
	header_up Host {$BACKEND_DOMAIN}

	# Bypass headers
	header_up X-Vercel-Protection-Bypass {$VERCEL_PROTECTION_BYPASS_TOKEN}
	header_up X-Vercel-Set-Bypass-Cookie "true"

	# JWT cookie
	header_up Cookie "_vercel_jwt={$VERCEL_JWT}"
}
